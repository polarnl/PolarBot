  "devDependencies": {
    "@types/node": "^22.10.10",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "typescript": "~5.5.4",
    "tsx": "^4.20.3"
  },
  "engines": {
    "node": ">=22.12.0"
